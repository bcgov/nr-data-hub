{
  "$id": "https://github.com/bcgov/nr-data-hub/tree/main/schemas/data_discovery.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "data_discovery_metadata",
  "description": "Metadata collected during data discovery",
  "type": "object",
  "$defs": {
    "user": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the contact"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email of the contact"
        }
      }
    },
    "security_classification": {
      "type": "string",
      "enum": [
        "Protected A",
        "Protected B",
        "Protected C"
      ]
    }
  },
  "properties": {
    "data_custodian": {
      "$ref": "#/definitions/user",
      "description": "Data custodian of the dataset"
    },
    "data_specialist": {
      "$ref": "#/definitions/user",
      "description": "Data specialist of the dataset"
    },
    "description": {
      "type": "string",
      "description": "Description of the dataset"
    },
    "security_classification": {
      "$ref": "#/definitions/security_classification",
      "description": "Security classification of the dataset"
    },
    "tags": {
      "type": "array",
      "description": "Tags of the dataset, defined as key-value pairs",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "key",
          "value"
        ]
      }
    },
    "categories": {
      "type": "array",
      "description": "Categories to define the dataset",
      "items": {
        "type": "string"
      }
    },
    "storage_descriptor": {
      "type": "array",
      "description": "Relational data storage description at a column granularity",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Column name"
          },
          "type": {
            "type": "string",
            "description": "Column data type"
          },
          "precision": {
            "type": "string",
            "description": "Precision of the column (optional)"
          },
          "description": {
            "type": "string",
            "description": "Description of the column"
          },
          "security_classification": {
            "$ref": "#/definitions/security_classification",
            "description": "Security classification of the column"
          },
          "nullable": {
            "type": "boolean",
            "description": "Flag to indicate if the column is nullable"
          }
        },
        "required": [
          "name",
          "type"
        ]
      }
    },
    "data_store": {
      "type": "string",
      "description": "Description of the location in which the data is stored"
    }
  },
  "required": [
    "data_custodian",
    "description",
    "security_classification",
    "storage_descriptor"
  ]
}