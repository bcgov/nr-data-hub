{
  "$id": "https://github.com/bcgov/nr-data-hub/tree/main/schemas/mvd.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "permitting_mvd",
  "description": "Standardisation of the attributes collected from all LOB source systems associated with the PMT",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique ID of the permit",
      "format": "uuid"
    },
    "application_id": {
      "type": "string",
      "description": "Unique ID of the submitted application for a permit",
      "format": "uuid"
    },
    "source_system": {
      "type": "string",
      "description": "Acronym for the source system providing the permit tracking",
      "enum": [
        "APTS",
        "CATS",
        "EPUPS; PPA",
        "FTA",
        "MOTI",
        "RARN",
        "RRS",
        "TANTALIS",
        "WILD",
        "WMA"
      ]
    },
    "source_system_id": {
      "type": "string",
      "description": "Unique ID of the permit in the source system",
      "format": "uuid"
    },
    "project_id": {
      "type": "string",
      "description": "ID of the project this permit relates to",
      "format": "uuid"
    },
    "agency": {
      "type": "string",
      "description": "Acronym for the agency or ministry issuing the permit",
      "enum": [
        "AF",
        "ENV",
        "FOR",
        "MOTI",
        "WLRS",
        "BCER"
      ],
      "meta:enum": {
        "AF": "TODO: Add enum description here",
        "ENV": "TODO: Add enum description here",
        "FOR": "TODO: Add enum description here",
        "MOTI": "TODO: Add enum description here",
        "WLRS": "TODO: Add enum description here",
        "BCER": "TODO: Add enum description here"
      }
    },
    "business": {
      "type": "string",
      "description": "Business domain or area responsible for the permit",
      "enum": [
        "Archaeology",
        "Contaminated Sites",
        "Lands",
        "Riparian",
        "Transportation",
        "Water"
      ],
      "meta:enum": {
        "Archaeology": "TODO: Add enum description here",
        "Contaminated Sites": "TODO: Add enum description here",
        "Lands": "TODO: Add enum description here",
        "Riparian": "TODO: Add enum description here",
        "Transportation": "TODO: Add enum description here",
        "Water": "TODO: Add enum description here"
      }
    },
    "application_status": {
      "type": "string",
      "description": "Status of the application to obtain a permit",
      "enum": [
        "Issued",
        "Denied",
        "Pending",
        "In Review"
      ],
      "meta:enum": {
        "Issued": "TODO: Add enum description here",
        "Denied": "TODO: Add enum description here",
        "Pending": "TODO: Add enum description here",
        "In Review": "TODO: Add enum description here"
      }
    },
    "permit_application_name": {
      "type": "string",
      "description": "The business domain permit type",
      "enum": [
        "Commercial General",
        "Nominal Rent Tenure",
        "Residential",
        "Roadways - Public",
        "Utilities",
        "New Groundwater Licence",
        "Water Licence",
        "Change Approval for Works in and About a Stream"
      ],
      "meta:enum": {
        "Commercial General": "TODO: Add enum description here",
        "Nominal Rent Tenure": "TODO: Add enum description here",
        "Residential": "TODO: Add enum description here",
        "Roadways - Public": "TODO: Add enum description here",
        "Utilities": "TODO: Add enum description here",
        "New Groundwater Licence": "TODO: Add enum description here",
        "Water Licence": "TODO: Add enum description here",
        "Change Approval for Works in and About a Stream": "TODO: Add enum description here"
      }
    },
    "permit_application_type": {
      "type": "string",
      "description": "The form type for a permit or licence application",
      "enum": [
        "New",
        "Amendment",
        "Cancel",
        "Change Ownership"
      ],
      "meta:enum": {
        "New": "TODO: Add enum description here",
        "Amendment": "TODO: Add enum description here",
        "Cancel": "TODO: Add enum description here",
        "Change Ownership": "TODO: Add enum description here"
      }
    },
    "received_date": {
      "type": "string",
      "description": "Date in which the application for permit was submitted",
      "format": "date-time"
    },
    "accepted_date": {
      "type": "string",
      "description": "Date in which the review of the initial application's completeness concludes",
      "format": "date-time"
    },
    "tech_review_completion_date": {
      "type": "string",
      "description": "Date in which the technical team concludes their review of the application",
      "format": "date-time"
    },
    "rejected_date": {
      "type": "string",
      "description": "Date in which the permit is rejected",
      "format": "date-time"
    },
    "adjudication_date": {
      "type": "string",
      "description": "Date in which the permit is adjudicated, approved or issued",
      "format": "date-time"
    },
    "amendment_date": {
      "type": "string",
      "description": "Date in which the permit is amended",
      "format": "date-time"
    },
    "fn_consultn_start_date": {
      "type": "string",
      "description": "Date in which the consultation with First Nations starts",
      "format": "date-time"
    },
    "fn_consultn_completion_date": {
      "type": "string",
      "description": "Date in which the consultation with First Nations ends",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "application_id",
    "source_system",
    "source_system_id",
    "project_id",
    "agency",
    "business",
    "application_status",
    "permit_application_name",
    "received_date"
  ]
}